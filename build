#!/bin/sh
set -e
set -o errexit
set -o nounset

readonly pblue="\033[0;34m"
readonly pgreen="\033[0;32m"
readonly pgray="\033[0;40m"
readonly preset="\033[0m"

function banner() {
    local text=$1

    echo "${pblue}"
    figlet -f cybermedium "${text}"
    echo "${preset}"
}

PWD=`pwd`

readonly LEIN_TEST="lein midje"
readonly LEIN_PACKAGE="lein uberjar"
readonly LEIN_INSTALL="lein install"
readonly MAVEN_BUILD="mvn clean install"

# Having a namespace call snapshot is possibly the cause of this error
export LEIN_SNAPSHOTS_IN_RELEASE=

if [ ! -d "target" ]; then
   mkdir target
fi

(cd dashboard; grunt build)

(cd ./collectors/maven; ${MAVEN_BUILD})
(cd ./lib/parsers; ${MAVEN_BUILD})


(cd ./kuona-core; ${LEIN_TEST}; ${LEIN_INSTALL})
(cd ./kuona-api; ${LEIN_TEST}; ${LEIN_PACKAGE})
(cd ./tools/github-crawler; ${LEIN_TEST}; ${LEIN_PACKAGE})
(cd ./tools/tfs-crawler; ${LEIN_TEST}; ${LEIN_PACKAGE})
(cd ./collectors/snapshot; ${LEIN_TEST}; ${LEIN_PACKAGE})
(cd ./collectors/code; ${LEIN_TEST}; ${LEIN_PACKAGE})
(cd ./collectors/http; ${LEIN_TEST}; ${LEIN_PACKAGE})
(cd ./collectors/jenkins; ${LEIN_TEST}; ${LEIN_PACKAGE})
(cd ./collectors/git; ${LEIN_TEST}; ${LEIN_PACKAGE})

find . -iname '*standalone.jar' -not -path './target' -exec cp -f {} ./target \;
echo "${pblue}Binaries collected to ./target${preset}"
